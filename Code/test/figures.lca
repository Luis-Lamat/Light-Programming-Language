program figures {
	

	light(){
		window_size(width: 500, height: 500)

		var i:int = 0

		figure t2:circle
		figure t1:triangle has
			v: (100,200),
			v: (300,400),
			v: (350,250),
			color: rgb((1 + 2 * 8), (4 * 7 + 5), 255)
		end

		for (i = 1; i < 11; i += 1) do

			t2 has
				v: ((30 * i), (30 * i)),
				color: rgb(20 * i, 200 + i, 200 / i),
				size: 5 * i
			end
			camera t2
			wait (ms: 500 / i)
			move t2 (x: 1* i * 2, y: 0)
			move t2 (x: 0, y: -1 * i * 2)
			move t2 (x:-1 * i * 2, y:1 * i * 2)
			print(i)
		end

		#move t2 (x: 20, y: 0)
		#move t2 (x: 0, y: -20)
		#move t2 (x:-20, y:20)
		show t2
		hide t2
		background_color(r: 0.0, g: 100, b: 9)
		move_speed(ms: 9)


	}
}