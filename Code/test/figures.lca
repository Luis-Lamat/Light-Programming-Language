program figures {
	

	light(){
		window_size(width: 500, height: 500)

		var i:int = 0

		figure t2:circle
		figure t1:triangle has
			v: (100,200),
			v: (300,400),
			v: (350,250),
			color: rgb((1 + 2 * 8), (4 * 7 + 5), 255)
		end

		for (i = 1; i < 11; i += 1) do

			t2 has
				v: ((30 * i), (30 * i)),
				color: rgb(20 * i, 200 + i, 200 / i),
				size: 5 * i
			end
			camera t2
			wait (ms: 500 / i)
		end

		move t2 (x: 100, y: 0)
		wait (ms: 100)
		move t2 (x: (100 * (0-1)), y: 0)

		
	}
}